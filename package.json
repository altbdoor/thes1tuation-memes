{
  "scripts": {
    "pretty": "prettier -wu --log-level warn \"**/*\""
  },
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.7.0",
    "prettier": "^3.4.2"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=20"
  },
  "prettier": {
    "plugins": [
      "@shopify/prettier-plugin-liquid"
    ],
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "liquid-html"
        }
      }
    ]
  }
}
